<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F1E8D1"
        tools:context="com.example.victory.homeDemo">

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/tabs_rg" app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="291dp" android:layout_marginStart="4dp">
    </FrameLayout>
    <RadioGroup
            android:id="@+id/tabs_rg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:checkedButton="@id/bt_home"
            android:orientation="horizontal" tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0">
        <RadioButton
                android:button="@null"
                android:padding="5dp"
                android:drawablePadding="3dp"
                android:layout_weight="1"
                android:gravity="center"

                android:checked="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_width="132dp"
                android:layout_height="65dp" android:id="@+id/bt_home"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="280dp" tools:layout_editor_absoluteX="264dp"/>
        <RadioButton
                android:button="@null"
                android:checked="true"
                android:background="#00000000"

                android:scaleType="fitCenter"
                android:layout_width="144dp"
                android:layout_height="65dp" android:id="@+id/bt_message"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="133dp" tools:layout_editor_absoluteY="215dp"/>
        <RadioButton
                android:button="@null"
                android:checked="true"
                android:background="#00000000"
                android:scaleType="fitCenter"
                android:layout_width="130dp"
                android:layout_height="65dp" android:id="@+id/bt_myself"
                android:layout_gravity="center_vertical"
                tools:ignore="MissingConstraints"
                app:layout_constraintStart_toEndOf="@+id/bt_message" app:layout_constraintTop_toTopOf="@+id/bt_message"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.204"/>
    </RadioGroup>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="搜索"
            android:textColor="#AEAEAE"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            tools:ignore="MissingConstraints"
            app:layout_constraintTop_toTopOf="@+id/guideline2"
            android:layout_marginTop="20dp" app:layout_constraintBottom_toTopOf="@+id/guideline3"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.555"/>
    <ImageButton
            android:background="#00000000"
            android:src="@drawable/homedemo_taskpublish"
            android:scaleType="fitCenter"
            android:layout_width="62dp"
            android:layout_height="61dp" android:id="@+id/bt_taskPublish"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline2" app:layout_constraintHorizontal_bias="0.137"
            android:layout_marginBottom="12dp"/>
    <ImageButton
            android:background="#00000000"
            android:src="@drawable/homedemo_taskranking"
            android:scaleType="fitCenter"
            android:layout_width="62dp"
            android:layout_height="62dp" android:id="@+id/bt_taskRanking"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.865" android:layout_marginBottom="12dp"/>
    <ImageButton
            android:background="#00000000"
            android:src="@drawable/homedemo_taskreceive"
            android:scaleType="fitCenter"
            android:layout_width="62dp"
            android:layout_height="62dp" android:id="@+id/bt_taskReceive"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="12dp"/>
    <ImageButton
            android:background="#00000000"
            android:src="@drawable/homedemo_search"
            android:scaleType="fitCenter"
            android:layout_width="41dp"
            android:layout_height="45dp" android:id="@+id/bt_search"
            tools:ignore="MissingConstraints"
            app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName"
            app:layout_constraintTop_toTopOf="@+id/guideline2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline3" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="1.0"/>
    <androidx.constraintlayout.widget.Barrier
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="top" tools:layout_editor_absoluteY="223dp" tools:layout_editor_absoluteX="57dp"
            android:id="@+id/barrier2"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.0"/>
    <androidx.constraintlayout.widget.Barrier android:layout_width="wrap_content" android:layout_height="wrap_content"
                                              android:id="@+id/barrier" app:barrierDirection="left"
                                              tools:layout_editor_absoluteX="411dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline2"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.13132694"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline3"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.22"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline4"
                                                android:orientation="horizontal"
                                                app:layout_constraintGuide_percent="0.92"/>


</androidx.constraintlayout.widget.ConstraintLayout>
